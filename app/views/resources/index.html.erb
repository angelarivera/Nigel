<h1> Educational Resources </h1>

<!-- how will we input search bar? -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_tag(resources_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Topics" %>
      <%= submit_tag "Search!", :title => nil %>
      <% end %>

      <% if @resources.blank? %>
        <h4> There are no resources containing your search <%= params[:search] %>.</h4>
      <% end %>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <div>
    <ul>
    <% @resources.each do |resource| %>
      <div class="each-resource-displayed">
        <li> <%= link_to resource.title, resource_path(resource) %> </li>
        <%= render_with_hashtags(resource.content) %>
      </div>
      <!-- video: 13:12 -->
    <% end %>
    </ul>
  </div>
</div>
